<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_border">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/usersImage"
        android:adjustViewBounds="true"
        android:background="@drawable/circle"
        android:padding="3dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerInside"
        android:layout_margin="9dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/online_statusIV"
            android:adjustViewBounds="true"
            android:background="@drawable/circle"
            android:layout_alignRight="@id/usersImage"
            android:layout_alignBottom="@id/usersImage"
            android:src="@drawable/online_status_circle"
            android:scaleType="centerInside"
            android:layout_margin="3dp"
            android:visibility="gone"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Title"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:id="@+id/usersUsernameTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub Title"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:id="@+id/usersDescriptionTV"/>

    </LinearLayout>
</LinearLayout>